<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login.signin.SignInUserFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/signing_image_back"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        style="@style/image_back_button"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/signing_text_title"
        android:text="@string/input_data"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signing_image_back"
        style="@style/text_top_primary" />

    <ProgressBar
        android:id="@+id/signing_progress"
        app:layout_constraintLeft_toRightOf="@id/signing_text_title"
        app:layout_constraintTop_toTopOf="@id/signing_text_title"
        app:layout_constraintBottom_toBottomOf="@id/signing_text_title"
        style="@style/progress_side_top_title" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signing_input_layout_email"
        android:hint="@string/email"
        app:hintEnabled="true"
        app:errorEnabled="true"
        app:hintTextColor="@color/darkGrey"
        app:boxStrokeWidth="0.3dp"
        app:boxBackgroundColor="@color/transparent"
        app:boxStrokeColor="@color/lightGrey"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signing_text_title"
        style="@style/text_input_layout"
        android:layout_marginTop="15dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signing_input_email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/signing_input_layout_password"
        android:hint="@string/senha"
        app:hintEnabled="true"
        app:hintTextColor="@color/darkGrey"
        app:boxBackgroundColor="@color/transparent"
        app:boxStrokeColor="@color/lightGrey"
        app:boxStrokeWidth="0.3dp"
        app:passwordToggleEnabled="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signing_input_layout_email"
        style="@style/text_input_layout"
        android:layout_marginTop="15dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/signing_input_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signing_button_login"
        android:text="@string/enter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        style="@style/button_enabled" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signing_button_login_google"
        android:text="@string/continue_with_google"
        style="@style/button_google"
        android:textAlignment="center"
        android:drawablePadding="2dip"
        android:paddingStart="30dip"
        android:paddingEnd="26dip"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/signing_button_login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>