<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="textview_title_login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nunito_sans_semi_bold</item>
    </style>

    <style name="text_subtitle_login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="button_enabled" parent="button_base">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_button_border_enable</item>
    </style>

    <style name="button_transparent" parent="button_base">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/background_button_transparent_borded</item>
    </style>

    <style name="button_transparent_not_borded" parent="button_base">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/background_button_white</item>
    </style>

    <style name="button_base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/nunito_sans_semi_bold</item>
    </style>

    <style name="image_back_button">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">25dp</item>
    </style>

    <style name="text_top_primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="text_input_layout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="button_google" parent="button_transparent_not_borded">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:drawableStart">@drawable/ic_google_20</item>
    </style>

    <style name="progress_side_top_title">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:visibility">invisible</item>
    </style>

</resources>
